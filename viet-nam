  <script>
        const defaultConfig = {
            school_name: "Tr∆∞·ªùng Ti·ªÉu H·ªçc Squirrelndt",
            gate_label: "Thi·∫øu ni√™n Th·ªß ƒë√¥ b∆∞·ªõc v√†o k·ªâ nguy√™n m·ªõi"
        };

        let gateState = 'closed';
        let isAnimating = false;

        function createDrumSound() {
            try {
                const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();
                
                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);
                
                oscillator.frequency.setValueAtTime(80, audioContext.currentTime);
                oscillator.frequency.exponentialRampToValueAtTime(0.1, audioContext.currentTime + 0.5);
                
                gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
                gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.5);
                
                oscillator.start(audioContext.currentTime);
                oscillator.stop(audioContext.currentTime + 0.5);
            } catch (e) {
                console.log('Audio not available');
            }
        }

        function playDrumSequence(count = 3) {
            for (let i = 0; i < count; i++) {
                setTimeout(() => {
                    createDrumSound();
                }, i * 200);
            }
        }

        function updateGateStatus(status) {
            document.getElementById('gateStatus3D').textContent = status;
            document.getElementById('statusText3D').textContent = `üéØ ${status}`;
        }

        function openGate3D() {
            if (isAnimating || gateState === 'open') return;
            
            isAnimating = true;
            gateState = 'opening';
            const gateDoor = document.getElementById('gateDoor3D');
            
            gateDoor.classList.remove('closing');
            gateDoor.classList.add('opening');
            updateGateStatus('ƒêang m·ªü c·ªïng 3D...');
            
            setTimeout(() => {
                gateState = 'open';
                isAnimating = false;
                updateGateStatus('C·ªïng M·ªü 3D');
            }, 25000);
        }

        function closeGate3D() {
            if (isAnimating || gateState === 'closed') return;
            
            isAnimating = true;
            gateState = 'closing';
            const gateDoor = document.getElementById('gateDoor3D');
            
            gateDoor.classList.remove('opening');
            gateDoor.classList.add('closing');
            updateGateStatus('ƒêang ƒë√≥ng c·ªïng 3D...');
            
            setTimeout(() => {
                gateState = 'closed';
                isAnimating = false;
                updateGateStatus('C·ªïng ƒê√≥ng 3D');
            }, 25000);
        }

        function handleScheduleButton(button, soundType) {
            button.classList.add('playing-sound');
            
            playDrumSequence(3);
            
            const buttonText = button.textContent;
            updateGateStatus(`ü•Å ${buttonText}`);
            
            if (soundType === 'break') {
                setTimeout(() => {
                    updateGateStatus('C·ªïng ƒê√≥ng 3D - Gi·ªù ra ch∆°i');
                }, 1000);
            }
            
            setTimeout(() => {
                button.classList.remove('playing-sound');
                if (soundType !== 'break') {
                    updateGateStatus('H·ªá th·ªëng 3D s·∫µn s√†ng');
                }
            }, 1500);
        }

        // Event listeners
        document.getElementById('openBtn3D').addEventListener('click', openGate3D);
        document.getElementById('closeBtn3D').addEventListener('click', closeGate3D);

        document.querySelectorAll('.schedule-btn').forEach(button => {
            button.addEventListener('click', () => {
                const soundType = button.getAttribute('data-sound');
                handleScheduleButton(button, soundType);
            });
        });

        // Element SDK implementation
        async function onConfigChange(config) {
            const schoolName = config.school_name || defaultConfig.school_name;
            const gateLabel = config.gate_label || defaultConfig.gate_label;
            
            document.getElementById('schoolName').textContent = schoolName;
            document.getElementById('gateName').textContent = gateLabel;
        }

        function mapToCapabilities(config) {
            return {
                recolorables: [],
                borderables: [],
                fontEditable: undefined,
                fontSizeable: undefined
            };
        }

        function mapToEditPanelValues(config) {
            return new Map([
                ["school_name", config.school_name || defaultConfig.school_name],
                ["gate_label", config.gate_label || defaultConfig.gate_label]
            ]);
        }

        // Initialize Element SDK
        if (window.elementSdk) {
            window.elementSdk.init({
                defaultConfig,
                onConfigChange,
                mapToCapabilities,
                mapToEditPanelValues
            });
        }
    </script>
